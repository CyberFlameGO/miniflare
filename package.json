{
  "name": "miniflare",
  "version": "2.0.0",
  "description": "Fun, full-featured, fully-local simulator for Cloudflare Workers",
  "keywords": [
    "cloudflare",
    "workers",
    "worker",
    "local",
    "cloudworker"
  ],
  "author": "MrBBot",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "vendor"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "npm run build:fixtures && ava",
    "build:fixtures": "node test/fixtures/build.js",
    "lint": "eslint '{src,test}/**/*.ts'",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "docs:changelog": "node docs/.vitepress/changelog.mjs",
    "docs:dev": "npm run docs:changelog && vitepress dev docs",
    "docs:build": "npm run docs:changelog && vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "bin": {
    "miniflare": "dist/bootstrap.js"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@mrbbot/node-fetch": "^5.0.2",
    "chokidar": "^3.5.1",
    "dotenv": "^8.2.0",
    "env-paths": "^2.2.1",
    "formdata-node": "^2.5.0",
    "html-rewriter-wasm": "^0.3.2",
    "http-cache-semantics": "^4.1.0",
    "kleur": "^4.1.4",
    "node-cron": "^2.0.3",
    "picomatch": "^2.3.0",
    "sanitize-filename": "^1.6.3",
    "selfsigned": "^1.10.11",
    "semiver": "^1.1.0",
    "source-map-support": "^0.5.19",
    "tslib": "^2.3.0",
    "typeson": "^6.1.0",
    "typeson-registry": "^1.0.0-alpha.39",
    "web-streams-polyfill": "^3.1.0",
    "ws": "^7.5.0",
    "yargs": "^16.2.0",
    "youch": "^2.2.2"
  },
  "peerDependencies": {
    "cjstoesm": "1",
    "ioredis": "4",
    "typescript": "4"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "cjstoesm": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@types/http-cache-semantics": "^4.0.0",
    "@types/ioredis": "^4.26.5",
    "@types/node": "^16.4.9",
    "@types/node-cron": "^2.0.3",
    "@types/node-forge": "^0.10.2",
    "@types/picomatch": "^2.2.6",
    "@types/rimraf": "^3.0.0",
    "@types/source-map-support": "^0.5.3",
    "@types/which": "^2.0.0",
    "@types/ws": "^7.4.5",
    "@types/yargs": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "ava": "^3.15.0",
    "cjstoesm": "^1.1.4",
    "esbuild": "^0.12.9",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "ioredis": "^4.27.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.4",
    "vitepress": "^0.15.5",
    "which": "^2.0.2"
  },
  "engines": {
    "node": ">=16.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrbbot/miniflare.git"
  },
  "bugs": {
    "url": "https://github.com/mrbbot/miniflare/issues"
  },
  "homepage": "https://miniflare.dev/",
  "volta": {
    "node": "16.6.0"
  }
}
